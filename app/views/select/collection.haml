.collections
  %ul.select_collection
    - @collection_names.each do |name|
      - collection_href = items_path(:collection => name.downcase)
      %li.collection{:"data-image-src" => image_path("/images/collections/#{name}.jpg"), :"data-a-href" => collection_href}= name

  .collection_image_div
    %a.collection_link{href: items_path(collection: @collection_names.first.downcase)}
      %h3.collection_caption= @collection_names.first
      %img.collection_image{src: image_path("/images/collections/#{@collection_names.first}.jpg")}
