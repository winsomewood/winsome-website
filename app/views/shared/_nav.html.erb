<nav class="main-nav">
  <div class="nav-flex">
    <div id="logo-container">
      <a href="<%= root_path %>" id="logo">
        <picture>
          <source srcset="/winsome-logo.svg" media="(min-width: 1040px)">
          <img src="/winsome-logo-tablet.png" alt="Winsome logo" />
        </picture>
      </a>
    </div>
    <%= form_tag(items_path, :method => :get, id: "search") do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search products...", size: 14 %>
    <% end %>
    <!-- Use div tabindex="0" instead of button because Safari does not set focus on button clicks -->
    <div tabindex="0" role="button" class="hamburger-menu">
      <%= image_tag("hamburger.svg", class: "hamburger-svg") %>
      <%= render :partial => "shared/mobile_menu" %>
    </div>
    <div class="modal-background"></div>
    <%= image_tag("x.svg", class: "mobile-close-button") %>
    <div class="product-nav">
      Products
      <div class="nav-category-menu-container">
        <%= render :partial => "shared/nav_category_menu" %>
      </div>
    </div>
    <%= link_to("Retailers", retailers_path) %>
    <%= link_to("Contact us", contact_path) %>
    <%= link_to("About us", "/about") %>
  </div>
</nav>